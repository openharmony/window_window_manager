import("//build/config/components/ets_frontend/ets2abc_config.gni")
import("//build/ohos.gni")
import("../../../../windowmanager_aafwk.gni")

config("screen_common_config") {
  visibility = [ ":*" ]

  include_dirs = [
    "../common",
    "../../../../utils/include",
    "../../../innerkits/wm",
    "../../../innerkits/dm",
    "../../../../wm/include",
    "../../napi/screen_runtime/napi",
  ]
}

config("screen_kit_public_config") {
  visibility = [ ":*" ]

  include_dirs = [ "screen_ani/include" ]
}

# lib generate
ohos_shared_library("screenani_kit") {
  shlib_type = "ani"
  branch_protector_ret = "pac_ret"
  sanitize = {
    cfi = true
    cfi_cross_dso = true
    cfi_vcall_icall_only = true
    debug = false
  }
  sources = [
    "screen_ani/src/ani_err_utils.cpp",
    "screen_ani/src/screen_ani.cpp",
    "screen_ani/src/screen_ani_listener.cpp",
    "screen_ani/src/screen_ani_manager.cpp",
    "screen_ani/src/screen_ani_utils.cpp",
  ]

  configs = [
    ":screen_common_config",
    ":screen_kit_public_config",
    "../../../../resources/config/build:coverage_flags",
  ]

  public_configs = [ ":screen_kit_public_config" ]

  deps = [
    "../../../../dm:libdm",
    "../../../../interfaces/kits/napi/screen_runtime:screen_kit",
    "../../../../utils:libwmutil",
    "../../../../utils:libwmutil_base",
  ]

  external_deps = [
    "ability_runtime:ability_manager",
    "ability_runtime:runtime",
    "c_utils:utils",
    "eventhandler:libeventhandler",
    "graphic_2d:librender_service_base",
    "graphic_surface:surface",  # use for SurfaceUtils
    "hilog:libhilog",
    "hitrace:hitrace_meter",
    "image_framework:image",
    "image_framework:image_native",
    "image_framework:image_taihe",
    "napi:ace_napi",
    "runtime_core:ani",
    "runtime_core:ani_helpers",
  ]

  innerapi_tags = [ "platformsdk" ]
  part_name = "window_manager"
  subsystem_name = "window"
}

group("screen_ani") {
  deps = [
    ":screenani_kit",
    "screen_ani:screen_etc",
  ]
}
