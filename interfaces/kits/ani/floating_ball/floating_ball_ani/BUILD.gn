import("//build/config/components/ets_frontend/ets2abc_config.gni")
 
# abc generate
generate_static_abc("fbwindow_ani") {
  base_url = "./ets"
  files = [ "./ets/@ohos.window.floatingBall.ets" ]
  is_boot_abc = "True"
  device_dst_file = "/system/framework/fbwindow_ani.abc"
}

ohos_prebuilt_etc("fbwindow_etc") {
  source = "$target_out_dir/fbwindow_ani.abc"
  deps = [ ":fbwindow_ani" ]
  part_name = "window_manager"
  subsystem_name = "window"
  module_install_dir = "framework"
}

group("fbwindow_ani_abc_pack") {
  deps = [
    ":fbwindow_etc",
  ]
}