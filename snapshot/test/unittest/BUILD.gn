group("unittest") {
  testonly = true

  deps = [
    ":snapshot_display_test",
  ]

  if (window_manager_use_sceneboard) {
    deps += [ ":snapshot_utils_test" ]
  }
}

ohos_unittest("snapshot_utils_test") {
  module_out_path = module_out_path

  sources = [ "snapshot_utils_test.cpp" ]

  deps = [ ":utils_unittest_common" ]

  external_deps = [
    "cJSON:cjson_static",
    "c_utils:utils",
    "hilog:libhilog",
    "selinux_adapter:librestorecon",
  ]
}

ohos_unittest("snapshot_display_test") {
  module_out_path = module_out_path

  sources = [ "snapshot_display_test.cpp" ]

  deps = [ ":utils_unittest_common" ]

  external_deps = [
    "cJSON:cjson_static",
    "c_utils:utils",
    "hilog:libhilog",
    "selinux_adapter:librestorecon",
  ]
}

